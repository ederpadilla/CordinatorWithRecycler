<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/background"
    android:clickable="true"
    android:layout_marginTop="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    android:id="@+id/rootview"
    android:elevation="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="180dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
                <ImageView
                    android:id="@+id/imgv_product_snack"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@drawable/imgtest"
                    android:layout_gravity="center_horizontal"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:id="@+id/tv_candy_name"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"/>
                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="13sp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv_precio"
                    android:textStyle="bold"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:layout_marginLeft="15dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="63dp"
            android:background="@color/white"
            android:id="@+id/linear_top_sell"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/star"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="@string/producto"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="8sp"
                />

        </LinearLayout>
        <com.varunest.sparkbutton.SparkButton
            android:id="@+id/heart_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="130dp"
            android:layout_alignParentEnd="true"
            app:sparkbutton_activeImage="@drawable/ic_heart_on"
            app:sparkbutton_inActiveImage="@drawable/ic_heart_off"
            app:sparkbutton_iconSize="22dp"
            app:sparkbutton_primaryColor="@color/heart_primary_color"
            app:sparkbutton_secondaryColor="@color/heart_secondary_color"/>
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/discount"
            android:id="@+id/imgv_discount"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>